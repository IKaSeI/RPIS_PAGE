    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/user.script.js"></script>
    <script src="~/lib/jquery/dist/jquery.maskedinput.min.js"></script>

    <script>
        var menuLinks = document.getElementsByName('mainMenu');
        menuLinks.forEach(function (element, i, arr) {
            element.onclick = function () {
                arr.forEach(function (param) { param.classList.remove("active"); });
                element.classList.add("active");
            }
        });

